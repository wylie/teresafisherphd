---
import { Image } from 'astro:assets';
const { src, alt, float = "", fullwidth } = Astro.props;
---

<Image class=`img ${fullwidth ? 'fullwidth' : ""} ${float}` src={src} alt={alt} />

<style>
  .img {
    width: 100%;
    height: auto;
    display: block;
    position: relative;
    box-shadow: -10px 10px 0 var(--color-3);
  }
  .img:not(.fullwidth) {
    max-width: 300px;
  }
  .fullwidth {
    max-width: 100%;
  } 
  @media screen and (min-width: 350px) {
    .left {
      float: left;
      margin-right: 1rem;
      margin-left: 10px;
      margin-bottom: 1rem;
    }
    .right {
      float: right;
      margin-left: 1rem;
      margin-bottom: 1rem;
    }
    .img:not(.fullwidth) {
      width: 40vw;
      height: auto;
    }
  }
  @media screen and (min-width: 768px) {
    .img:not(.fullwidth) {
      width: 29vw;
    }
  }
</style>