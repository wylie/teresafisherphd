---
import { Image } from 'astro:assets';
const { src, alt, float = "" } = Astro.props;
---

<div class=`wrapper ${float}`>
  <Image class="img" src={src} alt={alt} />
</div>

<style>
  .wrapper {
    position: relative;
    margin-left: 10px;
  }
  .wrapper::before {
    position: absolute;
    content: "";
    background-color: var(--color-3);
    left: -10px;
    bottom: -10px;
    width: 100%;
    height: 100%;
  }
  .img {
    width: 100%;
    height: auto;
    display: block;
    position: relative;
  }
  @media screen and (min-width: 350px) {
    .wrapper.left {
      float: left;
      margin-right: 1rem;
      margin-left: 10px;
      margin-bottom: 1rem;
    }
    .wrapper.right {
      float: right;
      margin-left: 1rem;
      margin-bottom: 1rem;
    }    
    .img {
      width: 45vw;
      height: auto;
    }
  }
  @media screen and (min-width: 600px) {
    .img {
      width: 300px;
    }
  }
</style>