---
import { Image } from 'astro:assets';
const { src, alt, align = "", ...rest } = Astro.props;
---

<Image class=`img ${align}` src={src} alt={alt} {...rest} />

<style>
  .img {
    position: relative;
    display: block;
    max-width: calc(100% - 10px);
    height: auto;
    margin: 0 0 calc(1rem + 10px) 10px;
    box-shadow: -10px 10px 0 var(--color-3);
  }
  @media screen and (min-width  : 500px) {
    .left,
    .right,
    .center {
      max-width: 300px;
      margin-bottom: calc(1rem + 10px);
    }
    .left {
      float: left;
      margin-right: calc(1rem + 10px);
    }
    .center {
      margin: auto;
      margin-right: calc(1rem + 10px);
      margin-left: calc(1rem + 10px);
    }
    .right {
      float: right;
      margin-left: calc(1rem + 10px);
    }
  }
</style>