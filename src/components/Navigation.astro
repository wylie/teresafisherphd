<nav class="navigation">
  <ul class="nav-list">
    <li class="nav-item"><a href="/">Welcome</a></li>
    <li class="nav-item" id="about">
      <button class="nav-trigger" type="button" aria-expanded="false" aria-controls="about-menu">About</button>
      <ul class="about-list">
        <li><a href="/about/who-am-i/">Who Am I?</a></li>
        <li><a href="/about/my-approach/">My Approach</a></li>
        <li><a href="/about/education-and-training/">Education & Training</a></li>
      </ul>
    </li>
    <li class="nav-item" id="services">
      <button class="nav-trigger" type="button" aria-expanded="false" aria-controls="services-menu">Services</button>
      <ul class="services-list">
        <li><a href="/services/individual-therapy/">Individual Therapy</a></li>
        <li><a href="/services/emdr/">EMDR</a></li>
        <li><a href="/services/supervision-and-consultation/">Supervision & Consultation</a></li>
        <li><a href="/services/community-outreach/">Community Outreach</a></li>
      </ul>
    </li>
    <li class="nav-item"><a href="/rates-and-insurance/">Rates & Insurance</a></li>
    <li class="nav-item"><a href="/contact/">Contact</a></li>
  </ul>
</nav>

<script>
  const isTouchLike = window.matchMedia('(hover: none), (pointer: coarse)').matches;

  if (isTouchLike) {
    const aboutElement = document.getElementById('about');
    const servicesElement = document.getElementById('services');

    const aboutButton = aboutElement?.querySelector('.nav-trigger');
    const servicesButton = servicesElement?.querySelector('.nav-trigger');

    const aboutItems = aboutElement?.querySelector('.about-list');
    const servicesItems = servicesElement?.querySelector('.services-list');

    const closeMenus = () => {
      aboutItems?.classList.remove('visible');
      servicesItems?.classList.remove('visible');
      aboutButton?.setAttribute('aria-expanded', 'false');
      servicesButton?.setAttribute('aria-expanded', 'false');
    };

    aboutButton?.addEventListener('click', (event) => {
      event.stopPropagation();
      const isOpen = aboutItems?.classList.toggle('visible');
      servicesItems?.classList.remove('visible');
      aboutButton.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
      servicesButton?.setAttribute('aria-expanded', 'false');
    });

    servicesButton?.addEventListener('click', (event) => {
      event.stopPropagation();
      const isOpen = servicesItems?.classList.toggle('visible');
      aboutItems?.classList.remove('visible');
      servicesButton.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
      aboutButton?.setAttribute('aria-expanded', 'false');
    });

    document.addEventListener('click', (event) => {
      const target = event.target as Node | null;
      if (!aboutElement?.contains(target) && !servicesElement?.contains(target)) {
        closeMenus();
      }
    });
  }
</script>

<style>
  .navigation {
    display: flex;
    justify-content: center;
    font-size: 1rem;
  }
  #about,
  #services {
    display: flex;
    align-items: center;
    position: relative;
    justify-content: center;
  }
  .nav-trigger {
    border: 0;
    background: transparent;
    color: var(--color-6);
    text-decoration: underline;
    cursor: pointer;
    font: inherit;
    padding: 0;
  }
  .about-list,
  .services-list {
    opacity: 0;
    position: absolute;
    list-style-type: none;
    margin: 0;
    background-color: var(--color-4);
    padding: 0;
    border-radius: 6px;
    box-shadow: 0 1px 4px var(--color-1);
    overflow: hidden;
    transition: all .25s;
    z-index: 2;
    top: 1.5rem;
    visibility: hidden;
  }
  .about-list li,
  .services-list li {
  }
  .about-list li a,
  .services-list li a {
    padding: .25rem 1rem;
    display: block;
  }
  .about-list li:hover,
  .services-list li:hover {
    background-color: var(--color-3);
  }
  #about:hover .about-list,
  #about:focus-within .about-list,
  #services:hover .services-list,
  #services:focus-within .services-list {
    opacity: 1;
    visibility: visible;
  }
  .navigation {
    border-bottom: 3px double var(--color-2);
    border-top: 3px double var(--color-2);
    padding: .5rem 0;
  }
  .nav-list {
    display: flex;
    flex-wrap: wrap;
    justify-self: center;
    justify-content: center;
    list-style-type: none;
    margin: 0;
    padding: 0;
    width: fit-content;
    row-gap: .1rem;
    column-gap: 1rem;
  }
  .nav-item {
    white-space: nowrap;
  }
  .about-list.visible,
  .services-list.visible {
    opacity: 1;
    visibility: visible;
  }
  #about:hover,
  #services:hover,
  .nav-trigger:hover {
    color: var(--color-6-hover);
  }
</style>