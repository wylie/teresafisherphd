---
import { Image } from 'astro:assets';
import logo from '../assets/images/logo.png';
const { class: className } = Astro.props;
---

<footer class=`footer ${className}`>
  <div class="inner-layout">
    <Image class="image" src={logo} alt="Milkweed Mental Health Logo" />
    <address>
      <p><a href="mailto:teresa@teresafisherphd.com">teresa@teresafisherphd.com</a> <span class="divider">|</span> <a href="tel:+18282762290">(828) 276-2290</a></p>
      <p class="address">
        <a href="geo:35.594844,-82.551677">
          <span>9 SW Pack Sq.</span>
          <span>Suite 204 E1-A</span>
          <span>Asheville, NC 28801</span>
        </a>
      </p>
    </address>
    <small>&copy; 2025 Milkweed Mental Health | Site by <a href="https://wyliefisher.com">Wylie</a></small>
  </div>
</footer>

<style>
  .footer {
    display: flex;
    background-color: var(--color-2);
  }
  .footer .inner-layout {
    display: grid;
    text-align: center;
    padding: 1rem 1rem .5rem;
  }
  .image {
    width: 200px;
    height: auto;
    justify-self: center;
  }
  .address span {
    white-space: nowrap;
  }
  address {
    font-style: normal;
  }
  small {
    margin-top: 1rem;
  }
  @media screen and (min-width: 650px) {
    .footer .inner-layout {
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr auto;
      gap: 1rem;
    }
    .image {
      width: 100%;
    }
    address {
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
    address .divider {
      display: none;
    }
    address p {
      margin: 0;
      width: 75%;
    }
    address a {
      margin-top: 1rem;
      display: block;
    }
    address span {
      display: block;
    }
    small {
      grid-column-start: 1;
      grid-column-end: 3;
      justify-self: center;
    }
  }
</style>