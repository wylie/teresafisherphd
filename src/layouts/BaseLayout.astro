---
import Meta from '../components/Meta.astro'
import HeadingHome from '../components/HeadingHome.astro';
import HeadingInternal from '../components/HeadingInternal.astro';
import Footer from '../components/Footer.astro';

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<Meta />
	</head>
	<body class="layout">
		{currentPath.endsWith('/teresafisherphd/') ? (
			<HeadingHome />
		) : (
			<HeadingInternal />
  	)}
		<main class="main-content">
			<slot />
		</main>
		<Footer class="main-content" />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	.layout {
		display: grid;
		grid-template-rows: auto 1fr auto;
		gap: 1rem;
		min-height: 100vh;
	}
</style>
<style is:global>
	:root {
		--color-1: #608A70;
		--color-2: #A4C3A4;
		--color-3: #FFD64A;
		--color-4: #FFF5E4;
		--color-5: #F47D20;
		--color-6: #BF381E;
		--color-6-hover: #8b210c;
		--color-7: #2e2e2e;
	}
	html,
	body {
		font-family: "Outfit", serif;
		font-optical-sizing: auto;
		font-weight: 200;
		font-style: normal;
		font-size: 1.2rem;
		line-height: 1.5;
		background-color: var(--color-4);
		color: var(--color-7);
	}
	h1,
	h2,
	h3 {
		font-weight: 300;
		margin: 0;
	}
	h1 {
    font-size: 3rem;
  }
	h2 {
    font-size: 2rem;
  }
	h3 {
    font-size: 1.5rem;
  }
	a {
		color: var(--color-6);
	}
	a:hover {
		color: var(--color-6-hover);
	}
	a.dark {
		color: var(--color-7);
	}
	a.dark:hover {
		color: var(--color-7);
	}
	.inner-layout {
		max-width: 800px;
		margin: auto;
	}
	.main-content {
		padding: 0 1rem;
	}
</style>
