---
import BaseLayout from '../layouts/BaseLayout.astro';

interface Props {
    error: unknown
}

const { error } = Astro.props
---

<BaseLayout>
	<div class="inner-layout">
		<h2>404</h2>
    <div>{error instanceof Error ? error.message : 'Unknown error'}</div>
	</div>
</BaseLayout>

<style>
  .inner-layout {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  h2 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
</style>
